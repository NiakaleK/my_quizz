<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="QuizBundle\Entity\Questions" table="questions">
    <id name="idQuestion" type="integer" column="id_question">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="idQuizCategory" type="integer" column="id_quiz_category" nullable="false"/>
    <field name="question" type="string" column="question" length="255" nullable="false"/>
    <field name="reponseA" type="string" column="reponse_A" length="255" nullable="false"/>
    <field name="reponseB" type="string" column="reponse_B" length="255" nullable="false"/>
    <field name="reponseC" type="string" column="reponse_C" length="255" nullable="false"/>
    <field name="reponse" type="string" column="reponse" length="255" nullable="false"/>
  </entity>
</doctrine-mapping>
